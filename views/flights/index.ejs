<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Departures</h1>
  <table>
    <thead>
      <tr>
        <th>Schedule</th>
        <th>Airport</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(flight => { %>
        <tr>
          <td style="<%= flight.departs < Date.now() ? 'color: red' : 'color: ' %>">
            <%= flight.departs %>
          </td>
          <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
          <td>
            <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
            </form>  
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>